{
  "name": "@sergeysova/craft",
  "version": "0.3.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Notion-style WYSIWYG editor with AI extensions support",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "module": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "dependencies": {
    "@tiptap/core": "^2.1.8",
    "@tiptap/extension-code-block-lowlight": "^2.1.8",
    "@tiptap/extension-color": "^2.1.8",
    "@tiptap/extension-highlight": "^2.1.8",
    "@tiptap/extension-horizontal-rule": "^2.1.8",
    "@tiptap/extension-image": "^2.1.8",
    "@tiptap/extension-link": "^2.1.8",
    "@tiptap/extension-placeholder": "2.0.3",
    "@tiptap/extension-task-item": "^2.1.8",
    "@tiptap/extension-task-list": "^2.1.8",
    "@tiptap/extension-text-style": "^2.1.8",
    "@tiptap/extension-underline": "^2.1.8",
    "@tiptap/pm": "^2.1.8",
    "@tiptap/react": "^2.1.8",
    "@tiptap/starter-kit": "^2.1.8",
    "@tiptap/suggestion": "^2.1.8",
    "lowlight": "^3.0.0",
    "next": "13.4.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-moveable": "^0.54.1",
    "tippy.js": "^6.3.7",
    "tiptap-markdown": "^0.8.2"
  },
  "devDependencies": {
    "tailwind-config": "workspace:*",
    "tsconfig": "workspace:*",
    "tsup": "^7.2.0"
  },
  "contributors": [
    "Sergey Sova <mail@sergeysova.com>",
    "Steven Tey <stevensteel97@gmail.com>"
  ],
  "homepage": "https://craft.sova.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergeysova/craft.git"
  },
  "bugs": {
    "url": "https://github.com/sergeysova/craft/issues"
  },
  "keywords": [
    "editor",
    "markdown",
    "nextjs",
    "react"
  ]
}
